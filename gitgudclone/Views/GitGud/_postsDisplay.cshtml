@model gitgudclone.Models.PostsModel

<div class="card text-white bg-dark mb3 card text-center col-md" style = "width: 25rem;">
    <div class="card-body">
        <p id="id" class="card-title"><h2>@Model.title</h2></p>

        <ol id="id" class = "card-title">
            @foreach (StepsModel step in @Model.postSteps)
            {
                <li>
                    <h6>@step.step</h6>
                    @if (step.img != null)
                    {
                        <p><img src=@step.img width="200px" alt="step.img"/></p>
                    }
                </li>
            }
        </ol>
        
    </div>
</div>