                        }                             *@
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="gitgud" asp-action="viewmessages">View Messages</a>
                            </li> 
                        }
                        else if(User.IsInRole("user"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="gitgud" asp-action="viewposts">View Tutorials</a>
                            </li>
                          <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="gitgud" asp-action="addpostform" asp-route-userEmail = "@User.Identity.Name">Add Tutorial</a>
                            </li>

                            @* foreach (MessagesModel message in @Model.messagesList)
